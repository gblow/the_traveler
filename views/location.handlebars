<section class="container">
  <h3 class="destination-name">{{destination.name}}</h3>
  <h4>Location: {{location_name}}</h4>
  <!-- If the user is logged in, render the destination content -->
  {{#if loggedIn}}
  <section class="flex-row justify-center">
    {{#each destination.posts as |post|}}
    {{> post-details}}
    {{/each}}
  </section>
</section>
<!-- Otherwise, provide a link to login -->
{{else}}
<a href="/login">You must login first to view this page</a>
{{/if}}